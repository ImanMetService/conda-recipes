package:
    name: vtk-cdat
    version: 7.1.0.@VERSION@

source:
    git_rev: master
    #git_url: git://github.com/UV-CDAT/VTK.git
    git_url: git://github.com/Kitware/VTK.git
    #git_rev: remove-renderer-leak-followup
    #git_url: https://gitlab.kitware.com/danlipsa/vtk.git

    #  patches:
    #    - dlls.patch                              [win]
    #    - apple.patch                             [osx]

build:
  number: @BUILD_NUMBER@
  detect_binary_files_with_prefix: true
  has_prefix_files:                           [win]
    - Lib/site-packages/vtk/__init__.py       [win]

requirements:
  build:
    - cmake
    - python
    - proj4
    - hdf5 1.8.17
    - ffmpeg
    - freetype
    - mesalib                                 [linux] {nox}
    - x264
  run:
    - python
    - proj4
    - hdf5 1.8.17
    - ffmpeg
    - freetype
    - mesalib                                 [linux] {nox}
    - x264

about:
  home: http://www.vtk.org/
  license: BSD
  summary: VTK is an open-source, freely available software system for 3D computer graphics
